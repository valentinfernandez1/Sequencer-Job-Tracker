# --- ETHEREUM BLOCKCHAIN CONFIGURATION ---
# Ethereum RPC endpoint URL (REQUIRED)
ETH_RPC = https://ethereum-rpc.publicnode.com
# Sequencer contract address (REQUIRED)
SEQUENCER_ADDRESS = 0x238b4E35dAed6100C6162fAE4510261f88996EC9
# Number of blocks to fetch in each parallel batch (OPTIONAL, default: 20)
# Higher values = faster catch-up but more RPC load
BATCH_PULL_AMOUNT = 20
# Delay between batch requests in milliseconds (OPTIONAL, default: 0)
# Use this to avoid hitting RPC rate limits
RATE_LIMITING_DELAY = 750
# Number of historical blocks to process during catch-up (OPTIONAL, default: 0)
CATCH_UP_DEPTH = 1000

# --- ALERT CONFIGURATION ---
# Discord webhook URL (OPTIONAL)
DISCORD_WEBHOOK = https://discord.com/api/webhooks/YOUR_WEBHOOK
# Slack webhook URL (OPTIONAL)
SLACK_WEBHOOK = https://hooks.slack.com/services/YOUR_WEBHOOK

# --- METRICS & MONITORING ---
# Prometheus metrics server port (OPTIONAL, default: 9100)
PROMETHEUS_METRIC_PORT = 9100

# --- APPLICATION ENVIRONMENT ---
# Set to "test" to disable automatic .env file loading during tests
NODE_ENV=