{
    "compilerOptions": {
        "target": "es2020",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "rootDir": "./src",
        "skipLibCheck": true,
        "strict": true,
        "noUnusedParameters": true,
        "sourceMap": true,
        "outDir": "./dist"
    },
    "include": ["./src/**/*.ts", "src/tests/**/*.ts"],
    "exclude": ["node_modules"]
}
